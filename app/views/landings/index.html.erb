<div class="jumbotron jumbotron-fluid">
  <div class="container page-header">
    <h1 class="display-3">Landing Pages</h1>
    <%= link_to 'Create New Landing Page', new_landing_path, class: 'btn btn-primary' %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @landings.each do |landing| %>
      <div class="col-md-4 landing-card">
        <%= link_to(landing) do %>
          <%= image_tag attachment_url(landing, :hero_image), class: 'card-img-top', style:'width: 100%;' %>
          <div class="card card-block">
            <h4 class="card-title"><%= landing.title %></h4>
            <p class="card-text m-b-1"><%= landing.subtitle %></p>
            <% if landing.user == current_user %>
              <%= link_to 'Edit', edit_landing_path(landing), class: 'btn btn-secondary' %>
              <%= link_to 'Delete', landing, class: 'btn btn-secondary', method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
