<p id="notice"><%= notice %></p>

<h2>Your Lead Gen Pages</h2>

<div class="container-fluid">
  <div class="row">
    <% @landings.each do |landing| %>
    <%= link_to(landing) do %>
      <div class="card col-md-4">
        <div class="card-block">
          <h4 class="card-title"><%= landing.title %></h4>
          <p class="card-text"><%= landing.subtitle %></p>
          <% if landing.user == current_user %>
            <%= link_to 'Edit', edit_landing_path(landing), class: 'btn btn-secondary' %>
            <%= link_to 'Delete', landing, class: 'btn btn-secondary', method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>