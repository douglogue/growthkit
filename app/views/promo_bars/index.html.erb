<div class="jumbotron jumbotron-fluid">
  <div class="container page-header">
    <h1 class="display-3">Promo Bars</h1>
    <%= link_to 'New Promo bar', new_promo_bar_path, class: 'btn btn-primary' %>
  </div>
</div>
<div class="container">
  <div class="row">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Link</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @promo_bars.each do |promo_bar| %>
          <tr>
            <td><%= promo_bar.id %></td>
            <td><%= promo_bar.title %></td>
            <td><%= promo_bar.link %></td>
            <td class="table-actions"><%= link_to 'Show', promo_bar %> | <%= link_to 'Edit', edit_promo_bar_path(promo_bar) %> | <%= link_to 'Destroy', promo_bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
